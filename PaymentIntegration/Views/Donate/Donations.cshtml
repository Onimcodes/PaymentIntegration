@{
    ViewData["Title"] = "Donations";
   
}
@model List<TransactionModel>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Amount</th>
                <th>TransactionRef</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in Model)
            {
                <tr>
                    <td>@transaction.Name</td>
                    <td>@transaction.Email</td>
                    <td>@transaction.Amount</td>
                    <td>@transaction.TrxRef</td>

                </tr>
            }
        </tbody>
    </table>
</div>
